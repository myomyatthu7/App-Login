<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/sign_up_textInputLayout"
        android:hint="Email"
        app:placeholderText="Enter your email"
        >
        <EditText
            android:id="@+id/etEmailLogin"
            style="@style/sign_up_editText"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiPwLogin"
        style="@style/sign_up_textInputLayout"
        android:hint="Passwords"
        app:placeholderText="Enter your passwords"
        app:passwordToggleEnabled="true"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPwLogin"
            style="@style/sign_up_editText"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cbRemember"
            android:layout_marginStart="20dp"
            android:text="Remember me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvForgotPw"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:text="Forgot Passwords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:text="Login"
        android:elevation="100dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="#12F5CF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>